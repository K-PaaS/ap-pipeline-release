spring:
  application:
    name: paasta-delivery-pipeline-inspection-api
  http:
    multipart:
      maxFileSize: <%= p('inspection_api.http.multipart.max_file_size')%>
      maxRequestSize: <%= p('inspection_api.http.multipart.max_request_size')%>

---
server:
  port: <%= p('inspection_api.server.port')%>

logging:
  level:
    ROOT: <%= p('inspection_api.logging.level')%>
  path: classpath:logback-spring.xml
  file: logs/application.log

inspection:
  server:
    url: <%= p('inspection.http_url')%>:<%= p('inspection.http_port')%>
    admin:
      username: "<%= p('inspection.admin.username')%>"
      password: "<%= p('inspection.admin.password')%>"

commonApi:
  url: <%= p('common_api.url')%>:<%= p('common_api.server.port')%>
  authorization:
    id: "<%= p('common_api.authorization.id')%>"
    password: "<%= p('common_api.authorization.password')%>"
